<Window x:Class="RawInput.Touchpad.MultiOptionSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RawInput.Touchpad"
        mc:Ignorable="d"
        Title="MultiOptionSelector" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="optionsList" SelectionChanged="optionsList_SelectionChanged"/>
        <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Grid.Row="1"/>
    </Grid>
</Window>